{{#*inline "groupHeader"}}
    <div data-group="{{_id}}" class="row row-group bg-gradient-dark text-white">
        <div class="d-flex flex-row justify-content-between align-items-center w-100">
            <div class="px-2">
                <strong>{{name}}</strong>
                {{#if @root.conf.group-description}}
                    {{#if description}}
                        <div class="text-truncate small">{{description}}</div>
                    {{/if}}
                {{/if}}
            </div>
            {{>group-toolbox}}
        </div>
    </div>
{{/inline}}

{{#*inline "item"}}
    <div class="row my-1 px-3 row-item d-flex flex-row justify-content-between align-items-center" data-item="{{_id}}"
        data-group="{{group._id}}" data-item="{{_id}}">
        {{>item-toolbox}}
        <div class="form-check">
            <input class="form-check-input" type="checkbox" name="selectedItems">
            <div class="ml-3">
                <div>{{name}}</div>
                {{#if @root.conf.examination-description}}
                    {{#if description}}
                        <div class="small">{{description}}</div>
                    {{/if}}
                {{/if}}
            </div>
        </div>
        <div class="d-flex flex-row justify-content-end ml-auto">
            <div class="latest-date"></div>
        </div>
    </div>
{{/inline}}

{{#*inline "itemsInGroup"}}
    {{zero "cnt"}}
    {{#each list}}
        {{#if (eq group.name ../groupName) }}
            {{inc "cnt"}}
            {{>item}}
        {{/if}}
    {{/each}}
    {{#if groupName}}
        {{#if (eq (get "cnt") 0)}}
            <div class="alert alert-info my-1 py-2" data-group="{{groupID}}">
                <small>Ta grupa nie zawiera żadnych badań.</small>
            </div>
        {{/if}}
    {{/if}}
{{/inline}}

{{!--  --}}

{{#if conf.group-view}}
    {{> itemsInGroup list=lists}}
    {{#if groups}}
        {{#each groups}}
            {{>groupHeader}}
            {{>itemsInGroup list=../lists groupName=name groupID=_id}}
        {{/each}}
    {{else}}
    {{/if}}
{{else}}
    {{#each lists}}
        {{>item}}
    {{/each}}
{{/if}}

