<div class="modal fade" id="view-options" tabindex="-1" role="dialog" aria-labelledby="view-options" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Opcje widoku listy badań</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form id="form-options" class="needs-validation" novalidate autocomplete="off">
                <div class="modal-body">
                    <div class="custom-control custom-switch">
                        <input type="checkbox" class="custom-control-input" id="setting_list-pagination">
                        <label class="custom-control-label" for="setting_list-pagination">Stronicowanie listy</label>
                    </div>
                    <div class="mt-3 custom-control custom-switch">
                        <input type="checkbox" class="custom-control-input" id="setting_fetch-latest">
                        <label class="custom-control-label" for="setting_fetch-latest">Wczytuj datę ostatnio wykonanego
                            badania</label>
                    </div>
                    <div class="mt-3 custom-control custom-switch">
                        <input type="checkbox" class="custom-control-input" id="setting_group-view">
                        <label class="custom-control-label" for="setting_group-view">Podział widoku na grupy</label>
                    </div>
                    <div class="mt-3">Wyświetlaj opisy w:</div>
                    <div class="d-flex flex-row justify-content-around">
                        <div class="custom-control custom-switch">
                            <input type="checkbox" class="custom-control-input" id="setting_group-description">
                            <label class="custom-control-label" for="setting_group-description">Grupach</label>
                        </div>
                        <div class="custom-control custom-switch">
                            <input type="checkbox" class="custom-control-input" id="setting_examination-description">
                            <label class="custom-control-label" for="setting_examination-description">Badaniach</label>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary rounded-pill" data-dismiss="modal">Anuluj</button>
                    <button type="submit" class="btn btn-primary rounded-pill">Zastosuj</button>
                </div>
            </form>
            <div id="formSend" class="progress bg-secondary custom-progress" role="progressbar">
                <div class="indeterminate"></div>
            </div>
        </div>
    </div>
</div>