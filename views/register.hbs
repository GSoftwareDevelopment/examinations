<div class="card-body">

    <section class="form-elegant">

        <div class="row">

            <div class="col col-md-6 offset-md-3">

                <form action="/auth/register" method="POST" autocomplete="off">

                    <div class="text-center">
                        <h3 class="dark-grey-text"><strong>Rejestracja użytkownika</strong></h3>
                    </div>

                    <div class="md-form mt-0">
                        <input type="text" id="name" name="name" class="form-control">
                        <label for="name">Twoje imię i nazwisko</label>
                    </div>

                    <div class="md-form mt-0">
                        <input type="text" id="email" name="email" class="form-control">
                        <label for="email">Adres e-mail</label>
                    </div>

                    <div class="md-form mb-0">
                        <input type="password" id="password" name="password" class="form-control">
                        <label for="password">Hasło</label>
                    </div>

                    <div class="md-form mb-5">
                        <input type="password" id="cpassword" name="cpassword" class="form-control">
                        <label for="cpassword">Potwierdź hasło</label>
                    </div>

                    <div class="row d-flex mb-1">

                        <!--Grid column-->
                        <div class="col d-flex justify-content-center align-items-center">
                            <div class="text-center">
                                <button data-href="/" type="button"
                                    class="btn btn-grey rounded-pill z-depth-1a">&lt;&lt; Wróć</button>
                            </div>
                            <div class="text-center">
                                <button type="submit" class="btn btn-green rounded-pill z-depth-1a">Zarejestruj</button>
                            </div>
                        </div>
                    </div>

                </form>

            </div>

    </section>

</div>