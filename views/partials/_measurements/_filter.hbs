<div class="modal fade" id="filterMeasurements" tabindex="-1" role="dialog" aria-labelledby="filterMeasurements"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Filtruj pomiary</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form id="createGroup" class="needs-validation" novalidate autocomplete="off">
                <div class="col-6 form-group">
                    <label for="date">Wyników na stronę: </label>
                    <select class="form-control col-9 col-sm-10" id="limit" name="limit">
                        <option value="0">wszystkie wyniki</option>
                        <option value="10">10 wyników</option>
                        <option value="20" selected>20 wyników</option>
                        <option value="50">50 wyników</option>
                        <option value="100">100 wyników</option>
                    </select>

                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-6 form-group">
                            <label for="date">Od</label>
                            <input class="form-control" type="date" name="date-from" id="date-from" value="">
                        </div>
                        <div class="col-6 form-group">
                            <label for="time">Do</label>
                            <input class="form-control" type="date" name="date-to" id="date-to" value="">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="name">Badanie</label>
                        <input class="form-control" type="text" name="examination" id="examination">
                    </div>
                    <div class="form-group">
                        <label for="name">Wyniki</label>
                        <input class="form-control" type="text" name="results" id="results">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Anuluj</button>
                    <button type="submit" class="btn btn-primary">Filtruj</button>
                </div>
            </form>
            <div id="formSend" class="progress bg-secondary custom-progress" role="progressbar">
                <div class="indeterminate"></div>
            </div>
        </div>
    </div>
</div>